<!DOCTYPE html
    PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
    style="font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif; box-sizing: border-box; font-size: 14px; margin: 0;">

<head>
    <meta name="viewport" content="width=device-width" />
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <title>Confirm email</title>
    <link href="https://fonts.googleapis.com/css?family=Raleway" rel="stylesheet">
    <style type="text/css">
        .container {
            width: 100%;
            max-width: 1140px;
            padding-right: 15px;
            padding-left: 15px;
            margin-right: auto;
            margin-left: auto;
        }

        .email-page h3 {
            margin-bottom: 40px;
            font-size: 60px;
            color: #7dcada;
            font-weight: 400;
            line-height: 52px;
            text-align: center;
            font-family: 'Raleway', sans-serif;
            margin-top: 0;
        }

        .email-box {
            background-color: #f4f4f4;
            padding: 100px 0;
            text-align: center;
            font-family: 'Raleway', sans-serif;
        }

        .email-txt h2 {
            margin: 60px 0 30px;
            font-size: 54px;
            color: #333333;
            font-weight: 500;
            line-height: 64px;
            font-family: 'Raleway', sans-serif;
        }

        .email-txt p {
            font-size: 30px;
            color: #333333;
            font-weight: 400;
            line-height: 36px;
            font-family: 'Raleway', sans-serif;
            max-width: 100%;
            width: 500px;
            margin: 0 auto 30px;
        }

        .email-btn {
            padding: 10px 70px;
            border: 5px solid #7dcada;
            display: inline-block;
            vertical-align: middle;
            text-align: center;
            align-items: center;
        }

        .email-btn a {
            font-size: 30px;
            font-weight: bold;
            text-transform: uppercase;
            font-family: 'Raleway', sans-serif;
            text-decoration: none;
            line-height: 46px;
            color: #7dcada;
        }

        .email-img {
            margin: 100px 0;
        }

        .email-footer h4 {
            margin-bottom: 40px;
            font-size: 44px;
            color: #7dcada;
            font-weight: 400;
            line-height: 40px;
            font-family: 'Raleway', sans-serif;
            margin-top: 0;
            text-transform: uppercase;
        }

        .email-footer p {
            margin: 0;
            font-size: 28px;
            color: #333333;
            font-weight: 500;
            line-height: 40px;
            font-family: 'Raleway', sans-serif;
        }

        .email-icon ul {
            margin: 0;
            padding: 0;
            list-style: none;
            text-align: center;
            margin-bottom: 40px;
        }

        .email-icon li {
            display: inline-block;
        }

        .email-icon li img {
            max-width: 100%;
            width: 50%;
            display: block;
            margin: 0 auto;
        }

        .email-logo img {
            max-width: 100%;
            width: 20%;
        }

        .email-page {
            margin: 90px 0;
        }

        body {
            margin: 0;
        }
    </style>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script type="text/javascript">
        function callResetPassword() {
            var password = document.getElementById('password');
            var cpassword = document.getElementById('cpassword');
            var passworderror = document.getElementById('passworderror')
            var cpassworderror = document.getElementById('cpassworderror')
            if (password.value == '') {
                passworderror.textContent = "Password can not be blank!";
                passworderror.style.color = "red";
            } else if (cpassword.value == '') {
                cpassworderror.textContent = "Password can not be blank!";
                cpassworderror.style.color = "red";
            } else if (password.value != cpassword.value) {
                passworderror.textContent = "Password must be match!";
                passworderror.style.color = "red";
                cpassworderror.textContent = "Password must be match!";
                cpassworderror.style.color = "red";
            } else {
                passworderror.textContent = "";
                passworderror.style.color = "";
                cpassworderror.textContent = "";
                cpassworderror.style.color = "";
                document.getElementById("resetForm").action = "/auth/reset-password/" + window.location.href.split('/').slice(-1)[0];
                document.getElementById("resetForm").submit();
            }
        }
    </script>
</head>

<body>
    <div class="email-page">
        <div class="container">
            <h3>Codebase</h3>
            <h1>Reset Password</h1>
            <form method="post" id="resetForm">
                <p>
                    <label>Password</label>
                    <input type="password" name="password" id="password" required>
                    <span id="passworderror"></span>
                </p>
                <p>
                    <label>Confirm Password:</label>
                    <input type="password" name="cpassword" id="cpassword" required>
                    <span id="cpassworderror"></span>
                </p>
                <p>
                    <input type="button" value="Submit" id="resetPassword" onclick="callResetPassword()">
                </p>
        </div>
    </div>
</body>

</html>